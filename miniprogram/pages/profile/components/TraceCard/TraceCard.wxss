.trace-card .card {
  margin: 22px 0;
  padding: 10px 36rpx /* 18px -> 36rpx */;
  color: #333;
  text-align: center;
  border-radius: 32rpx /* 16px -> 32rpx */;
  box-shadow: 0 0 12px 4px rgba(131, 131, 131, 0.2);
}
.trace-card .card .card-title {
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx /* 14px -> 28rpx */;
}
.trace-card .card .card-img {
  width: 100%;
  height: 348rpx /* 174px -> 348rpx */;
  margin: 12rpx /* 6px -> 12rpx */ 0;
  border-radius: 32rpx /* 16px -> 32rpx */;
}
.trace-card .card .card-location {
  width: 100%;
  padding-left: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #AAA;
  font-size: 12px;
}
